<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Choquei</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/home.css">
    <style>
        /* Estilos para dispositivos de largura maior que 768px */
        @media only screen and (min-width: 768px) {
            .choquei {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
                background-color: #f7f7f7;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            header {
                text-align: center;
                margin-bottom: 30px;
            }

            section {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 20px;
            }

            h1 {
                font-size: 2.5rem;
                margin-bottom: 20px;
                color: #333;
            }

            h2 {
                font-size: 1.8rem;
                margin-bottom: 10px;
                color: #444;
            }

            p {
                font-size: 1.2rem;
                margin-bottom: 20px;
                color: #666;
            }

            a {
                text-decoration: none;
                color: #007bff;
            }

            a:hover {
                text-decoration: underline;
            }
        }

        /* Estilos para dispositivos de largura menor ou igual a 768px */
        @media only screen and (max-width: 768px) {
            .choquei {
                padding: 10px;
            }

            header {
                text-align: center;
                margin-bottom: 20px;
            }

            section {
                display: block;
            }

            h1 {
                font-size: 2rem;
                margin-bottom: 15px;
                color: #333;
            }

            h2 {
                font-size: 1.5rem;
                margin-bottom: 8px;
                color: #444;
            }

            p {
                font-size: 1rem;
                margin-bottom: 15px;
                color: #666;
            }

            a {
                text-decoration: none;
                color: #007bff;
            }

            a:hover {
                text-decoration: underline;
            }
        }

    </style>
</head>
<body>
<section class="choquei">
    <header>
        <h1>Choquei</h1>
    </header>
    <section>
        <% if ( usuario ) { %>
        <%= usuario.id %>
        <form action="/auth/logout" method="post">
            <button type="submit">Logout</button>
        </form>
            <% if (usuario.tipo == 'Administrador' || usuario.tipo == 'Autor'){%>
                <a href="/artigos/add">Criar Artigo!</a>
            <% } %>

            <% }; %>
            <% if ( !usuario ) { %>
                <a href="/auth/login">Login</a>
            <% }; %>
        <% if ( usuario && usuario.tipo == 'admin') { %>
            <a href="/auth/signup">Cadastrar usuario</a>
            <% }; %>
        <% if (artigos && artigos.length) { %>
            <% artigos.forEach((artigo) => { %>
               <a href="/artigos/<%=artigo.id%>">
                    <h2><%=artigo.titulo%></h2>
               </a>
                <p><%= artigo.resumo %></p>
            <% }); %>
        <% } else { %>
            <p>Nenhum artigo encontrado.</p>
        <% } %>
    </section>
</section>
</body>
</html>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Choquei</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: rgb(9,6,60);
            background: linear-gradient(90deg, rgba(9,6,60,1) 0%, rgba(166,166,166,1) 64%, rgba(251,247,247,1) 100%);
        }
        .prompt {
            max-width: 400px;
            margin: 50px auto;
            padding: 120px;
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        h3 {
            color: #333;
        }
        h1 {
            color: #007bff;
            margin-bottom: 30px;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        label {
            margin-bottom: 5px;
            color: #555;
        }
        input {
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: calc(100% - 22px);
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
        .help {
            margin-top: 20px;
            color: #777;
        }
        .help a {
            color: #007bff;
            text-decoration: none;
        }
        .help a:hover {
            text-decoration: underline;
        }

        @media screen and (max-width: 500px) {
            .prompt {
                width: 90%;
            }
        }
    </style>
</head>
<body>
<section class="prompt">
    <h3>Choquei</h3>
    <h1>Sign in</h1>
    <% if (typeof hasMessages !== 'undefined' && hasMessages) { %>
        <section class="messages">
            <% messages.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </section>
    <% } %>
    <form action="#" method="post">
        <section>
            <label for="email">Email</label>
            <input id="email" name="email" type="email" autocomplete="email" required autofocus>
        </section>
        <section>
            <label for="current-password">Password</label>
            <input id="current-password" name="senha" type="password" autocomplete="current-password" required>
        </section>
        <button type="submit">Sign in</button>
    </form>
    <hr>
    <p class="help">Don't have an account? <a href="/auth/signup">Sign up</a></p>
</section>
</body>
</html>

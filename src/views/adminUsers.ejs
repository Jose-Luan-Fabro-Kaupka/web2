<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuários</title>
</head>
<body>
<h1>Lista de Usuários</h1>
<ul>
    <% users.forEach(user => { %>
        <li>
            <%= user.nome %> - <%= user.email %>
            <form action="/usuarios/<%= user._id %>" method="DELETE" style="display: inline;">
                <button type="submit">Deletar</button>
            </form>
            <form action="/usuarios/<%= user._id %>" method="GET" style="display: inline;">
                <button type="submit">Atualizar</button>
            </form>
        </li>
    <% }); %>
</ul>
</body>
</html>
